{% extends 'layouts/index.twig' %}

{% block content %}
    <div class='page-header'>
        <h1>Просмотр {{ this.modelHumanTitle[1] }}</h1>
    </div>

    {% set form = this.beginWidget('ext.mAdmin.widgets.AdminActiveFormWidget', {
        'type' : 'horizontal',
    }) %}
        {% for attributeName, element in editFormElements %}
            {% if element['class'] %}
                {{ widget(element['class'], element['options']|default({})|merge({'model':model, 'attribute':element['name'], 'form':form}) ) }}
            {% elseif element['type'] %}
                {% if element['data'] %}
                    {{ attribute(form, element['type']~'Row', [ model, attributeName, element['data'], element['htmlOptions'] ? element['htmlOptions'] : [] ])|raw }}
                {% else %}
                    {{ attribute(form, element['type']~'Row', [ model, attributeName, element['htmlOptions'] ? element['htmlOptions'] : [] ])|raw }}
                {% endif %}
            {% else %}
                {{ element|raw }}
            {% endif %}
        {% endfor %}

        <div class="form-actions">
            {{ widget('ext.mAdmin.widgets.AdminButtonWidget', {
                'icon' : 'fa fa-arrow-left',
                'label' : 'Вернуться назад',
                'url' : ['/'~this.uniqueId]
            }) }}
        </div>
    {{ void(this.endWidget()) }}
{% endblock %}